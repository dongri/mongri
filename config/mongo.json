{
  "development": {
    "uri": "mongodb://localhost:27017/development",
    "opts": {
      "replset": {
        "rs_name": "mongri-repl",
        "readPreference": "secondaryPreferred",
        "poolsize": 20,
        "socketOptions": {
          "keepAlive": 1
        }
      }
    }
  },
  "production": {
    "uri": "mongodb://localhost:27017/production",
    "opts": {
      "replset": {
        "rs_name": "mongri-repl",
        "readPreference": "secondaryPreferred",
        "poolsize": 20,
        "socketOptions": {
          "keepAlive": 1
        },
        "ssl": true
      },
      "server": {"ssl": true}
    }
  }
}
